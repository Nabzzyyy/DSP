@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<dissertation.Models.ClientEmotions>

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/Main.css")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <header>
        <nav class="secondary_header" id="menu">
            <ul>
                <li>@Html.ActionLink("Homepage", "Homepage")</li>
                <li>@Html.ActionLink("Download Client", "DownloadClient")</li>
                <li>@Html.ActionLink("Overview", "Overview")</li>
                <li>@Html.ActionLink("Analytical Report", "AnalyticalReport")</li>
            </ul>
        </nav>
    </header>
    <section>
        <div>
            <h3 class="report_title">Report</h3>
        </div>
        <div>
            <p>
                <em>ViolationChart.cshtml - shows violation for each client.</em>
            </p>
            <img src="@Url.Action("ViolationGraph")" alt="Violation Graph" />
        </div>

        <div>
            <p>
                <em>EmotionGraph.cshtml - shows emotional behaviour of each client.</em>
            </p>
            @foreach (var client in Model.Select(x => x.ClientID).Distinct())
            {
                <img src="@Url.Action("EmotionGraph", "Home", new { id = client.ToString()})" alt="Emotion Pie Chart" />
            }
            </div>
    </section>

</body>
</html>

<style>
    .report_title {
        color: #717070 !important;
        text-align: center;
    }

    .btn {
        position: absolute;
        left: 48%;
    }
</style>