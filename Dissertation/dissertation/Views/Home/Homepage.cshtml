@model IEnumerable<dissertation.Models.viewDevicesStruct>

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/Main.css")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
        <header>
            <nav class="secondary_header" id="menu">
                <ul>
                    <li>@Html.ActionLink("Homepage", "Homepage")</li>
                    <li>@Html.ActionLink("Download Client", "DownloadClient")</li>
                    <li>@Html.ActionLink("Overview", "Overview")</li>
                    <li>@Html.ActionLink("Analytical Report", "AnalyticalReport")</li>
                </ul>
            </nav>
        </header>
        <section>
            <div>
                <h3 class="homepage_title">Devices</h3>
            </div>
            <div>
                <table id="client_table">
                    <tr>
                        <th>Client Name</th>
                        <th>Online Status</th>
                        <th>Violations</th>
                    </tr>

                    @foreach (var client in Model)
                    {
                        <tr>
                            <td>@client.Name</td>
                            <td>@client.LastStatus.ToString("dd/MM/yyyy HH:mm:ss")</td>
                            <td>@client.TotalViolations</td>
                        </tr>
                    }
                </table>
            </div>
        </section>
</body>
</html>

<style>
    .homepage_title {
        color: #717070 !important;
        text-align: center;
    }

    .table_viewing {
        text-align: center;
    }
</style>

